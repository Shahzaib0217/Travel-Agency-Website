<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
        <title>Admin Panel</title>
</head>

<body>
    <%- include('../partials/adminNav'); %>
        <div class="container">
            <h1 class="text-center mt-3 mb-3">
                Tours Detail
            </h1>
            <hr class="bg-success border-2 border-top border-success">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tr>
                            <th>Tour ID</th>
                            <th>Tour Name</th>
                            <th>City</th>
                            <th>Description</th>
                            <th>Inclusions</th>
                            <th>Hotels</th>
                            <th>Price</th>
                            <th>Edit/ Delete</th>
                        </tr>
                        <% data.forEach(function(tour_data){ %>
                            <tr style=" background-color:cadetblue;">
                                <td>
                                    <%= tour_data.tourID %>
                                </td>
                                <td>
                                    <%= tour_data.tourName %>
                                </td>
                                <td>
                                    <%= tour_data.tourCity %>
                                </td>
                                <td>
                                    <%= tour_data.tourDescription %>
                                </td>
                                <td>
                                    <%= tour_data.tourInclusions %>
                                </td>
                                <td>
                                    <%= tour_data.tourHotels %>
                                </td>
                                <td>
                                    <%= tour_data.tourPrice %>
                                </td>
                                <td>
                                    <a href="/edit/<%= tour_data.id %>" class="btn btn-primary btn-sm">Edit</a>
                                    <a href="/delete/<%= tour_data.id %>" class="btn btn-primary btn-sm mt-3">Delete</a>
                                </td>
                            </tr>
                            <% }); %>
                    </table>
                </div>
            </div>
            <center>
                <% if(title=='Movies' ) { %>
                    <div class="clearfix">
                        <div class="hint-text">
                            Showing <b>
                                <%= movies.length%>
                            </b> out of
                            <b>
                                <%= movieCount%>
                            </b> Tours
                        </div>
                        <div>
                            <nav aria-label="...">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item <%=(page==1)?`disabled`:``%>">
                                        <a class="page-link" href="/?page=<%=(page==1)?`1`:`${page-1}`%>"
                                            tabindex="-1">Previous</a>
                                    </li>
                                    <% for(let pageCount=1; pageCount<=totalPages; pageCount++){ %>
                                        <%if(pageCount==page) {%>
                                            <li class="page-item active">
                                                <a class="page-link" href="#"
                                                    style="background-color: green; border-color: green;">
                                                    <%= pageCount%><span class="sr-only">(current)</span>
                                                </a>
                                            </li>
                                            <%}else{%>
                                                <li class="page-item">
                                                    <a class="page-link" href="/<%= view%>?page=<%=pageCount%>">
                                                        <%= pageCount%>
                                                    </a>
                                                </li>
                                                <%} }%>
                                                    <li class="page-item <%=(page==totalPages)?`disabled`:``%>">
                                                        <a class="page-link"
                                                            href="/?page=<%=(page==totalPages)?`totalPages`:`${Number(page)+1}`%>">Next</a>
                                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <% } %>
            </center>
        </div>
</body>